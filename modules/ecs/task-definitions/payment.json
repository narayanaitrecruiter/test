[
    {
    "family": "my-task-family",
    "networkMode": "bridge",
    "containerDefinitions": [
      {
        "name": "my-container",
        "image": "my-docker-image:latest",
        "cpu": 256,
        "memory": 512,
        "essential": true,
        "portMappings": [
          {
            "containerPort": 80,
            "hostPort": 80
          }
        ],
        "environment": [
          {
            "name": "ENV_VAR_NAME",
            "value": "value"
          }
        ],
        "logConfiguration": {
          "logDriver": "awslogs",
          "options": {
            "awslogs-group": "/ecs/my-task",
            "awslogs-region": "us-west-2",
            "awslogs-stream-prefix": "ecs"
          }
        }
      }
    ]
  }
]